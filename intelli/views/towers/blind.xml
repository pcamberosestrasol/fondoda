                    <field name="active" string="Archivado" widget="boolean_toggle" style=" text-decoration: none;  pointer-events: none;"/>
                  </button>
                </div>
                   <div class="row">
                     <div class="col-2" >
                        <field name="blind" widget='image'  style="width:150px;"/>
                       </div>   
                       <div class="col-sm-10"> 
                           <group>
                                 <field name="parent_tower" readonly="1" />
                                <field name="name" />
                                <field name="code" />
                                <field name="style" />
                                <field name="with_w" />
                                <field name="heigth_h" />
