      <record id="action_intelli_blind" model="ir.actions.act_window">
           <field name="name">Productos</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">intelli.blind</field>
            <field name="context">{'create':False}</field>
           <field name="view_mode">tree,form</field>
           <field name="help" type="html">
               <p class="o_view_nocontent_smiling_face">
                  Create a contact in your address book
               </p>
               <p>
                Odoo helps you to easily track all activities related to a customer.
               </p>
           </field>
       </record>

       <record id="action_blind_tree" model="ir.actions.act_window.view">
         <field eval="1" name="sequence"/>
         <field name="view_mode">tree</field>
         <field name="view_id" ref="blind_view_tree"/>
         <field name="act_window_id" ref="action_intelli_blind"/>
       </record>


      <record id="action_blind_form" model="ir.actions.act_window.view">
          <field eval="2" name="sequence"/>
          <field name="view_mode">form</field>
          <field name="view_id" ref="blind_view_form"/>
          <field name="act_window_id" ref="action_intelli_blind"/>
        </record>


        </data>
    </odoo>
