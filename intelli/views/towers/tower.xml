<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record id="view_intelli_tower_search" model="ir.ui.view">
        <field name="name">intelli.tower.search</field>
        <field name="model">intelli.tower</field>
        <field name="arch" type="xml">
            <search string="Busqueda">
                <filter string="Nombre" name="name" />
                <separator/>
                <field name="name"/>
                <separator/>

                <filter string="Calle" name="street"/>
                <separator/>
                <field name="street" />
                <separator/>
                
               <filter string="Calle 2" name="street2"/>
                <separator/>
                <field name="street2" />
                <separator/>

                <filter string="Ciudad" name="city"/>
                <separator/>
                <field name="city" />
                <separator/>
                
                <filter string="Estado" name="state_id"/>
                <separator/>
                <field name="state_id" />
                <separator/>
               
                <filter string="País" name="country_id"/>
                <separator/>
                <field name="country_id" />
                <separator/>
               
                <filter string="CP" name="zip"/>
                <separator/>
                <field name="zip" />
                <separator/>

                <filter string="Agente" name="agent"/>
                <separator/>
                <field name="agent" />
                <separator/>
               
                <filter string="Email agente" name="email_agent"/>
                <separator/>
                <field name="email_agent" />
                <separator/>
              
                
               
            
             
                
             
            </search>
        </field>
    </record>


      <record id="tower_view_tree" model="ir.ui.view">
          <field name="name">tree.tower</field>
          <field name="model">intelli.tower</field>
          <field name="arch" type="xml" >
              <tree string="Contacts" class="custom_img" >
                
                <field name="id" invisible="1" />
                <field name="name"/>
                 <button name="button_blinds" string="Productos" type="object" />
                 
                  <field name="street" />
                  <field name="street2" />
                  <field name="city" />
                  <field name="state_id" />
                  <field name="country_id" />
                  <field name="zip" />
                  
                  <field name="logo" widget='image'  />
                  <field name="tower_picture" widget='image' class="oe_avatar"  />
                  <field name="agent" />
                <field name="email_agent" />
                 <button name="button_duplicate" string="Duplicar" type="object" groups="intelli.group_intelli_super"/>
              </tree>
          </field>
      </record>
         <record id="tower_view_form_associate" model="ir.ui.view">
          <field name="name">intelli.form.assosiate</field>
          <field name="model">intelli.tower</field>
          <field name="arch" type="xml" >
            <form>
              
                   
                    <div class="row" >
                   
                    <div class="col-md-12">
                                 
                                   <field name="blinds"  widget="open_one2many_line"  context="{'default_parent_tower': id}">
                                     <tree
                                          string="Productos"
                                       
                                        
                                      >   
                                          
                                          <field name="blind" widget='image'  style="width:100px; height:100px;"/>
                                          <field name="parent_tower" invisible="1" />
                                          <field name="name" />
                                          <field name="code" />
                                          <field name="style" />
                                          <field name="with_w" />
                                          <field name="heigth_h" />
                                           <field name="m2_max" />
                                          <field name="price_size" />
                                          <field name="price" />
                                          <field name="cloth" />                
                                          <field name="actuation" />
                                          <field name="electronic" />
                                          <button name="button_duplicate" string="Duplicar" type="object" groups="intelli.group_intelli_super"/>
                                         
                                      </tree>                                      
                                   </field> 
                                
                    </div>   
               
                   </div>     
        
            
            
            </form>
          </field>
      </record>

      <record id="tower_view_form" model="ir.ui.view">
          <field name="name">intelli.form</field>
          <field name="model">intelli.tower</field>
          <field name="arch" type="xml" >
            <form duplicate="0">
              <sheet>
               <div class="oe_button_box" name="button_box">
                  <button name="toggle_active" type="object" class="oe_stat_button" style="text-align:center; font-weight:bold;" string="Activo">
                    <field name="active" string="Archivado" widget="boolean_toggle" style=" text-decoration: none;  pointer-events: none;"/>
                  </button>
                </div>
                   <div class="row">
                     <div class="col-2" >
                        <field name="logo" widget='image'  style="width:150px;"/>
                       </div>   
                       <div class="col-sm-10"> 
                           <group>
                                <field name="name" />
                                <field name="instalation_price" widget="monetary"  options="{'currency_field': 'currency_id'}" />
                                <field name="delivery_price"  widget="monetary"  options="{'currency_field': 'currency_id'}"/>
                                 <field name="currency_id"   options="{'no_create_edit': True, 'no_quick_create': True,'no_open': True}" />
                                <field name="password" />
                                <field name="agent" />
                                <field name="email_agent" />
                              
                              
                              
                                <label for="street" string="Dirección"/>
                                <div>
                                    <div class="o_address_format" name="div_address">
                                        <field name="street" placeholder="Calle..." class="o_address_street"/>
                                        <field name="street2" placeholder="Calle 2..." class="o_address_street"/>
                                        <field name="city" placeholder="Ciudad" class="o_address_city"/>
                                        <field name="state_id" class="o_address_state" placeholder="Estado" options='{"no_open": True}' context="{'country_id': country_id, 'zip': zip}"/>
                                        <field name="zip" placeholder="CP" class="o_address_zip"/>
                                        <field name="country_id" placeholder="País" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                    </div>
                                </div>
                                   <field name="styles_available" invisible="1" />
                                 
                            
                            </group>
                            <group>
                                <group>
                                      <field name="tower_picture" widget='image'   style="width:180px;"/>
                                </group> 
                                <group>  
                                  <field name="background_picture" widget='image'   style="width:180px;"/> 
                                </group> 
                          </group>
                    </div>
                       
                   </div>        
                    <div class="row" style="overflow-x: scroll;">
                     <div class="col-md-12">
                      <notebook>
                        <page string="Productos" >
                                 
                                   <field name="blinds"  widget="open_one2many_line" context="{'default_parent_tower': id}" >
                                     <tree
                                          string="Productos"
                                         
                                        
                                      >
                                          <field name="blind" widget='image' style="width:100px;"/>
                                          <field name="parent_tower" />
                                          <field name="name" />
                                          <field name="code" />
                                          <field name="style" />
                                          <field name="with_w" />
                                          <field name="heigth_h" />
                                          <field name="m2_max" />
                                          
                                          <field name="price_size" />
                                          <field name="price" />
                                          <field name="cloth" />                
                                          <field name="actuation" />
                                          <field name="electronic" />
                                          <button name="button_duplicate_no_open" string="Duplicar" type="object" groups="intelli.group_intelli_super"/>
                                      </tree>                                      
                                   </field> 
                                
                        </page>  
                        
                        </notebook>
                    </div>
                   </div>     
                       
                       
              </sheet>
              <div class="oe_chatter" modifiers="{}">
                <field name="message_follower_ids" widget="mail_followers" modifiers="{}"/>
                <field name="activity_ids" widget="mail_activity" modifiers="{}"/>
                <field name="message_ids" widget="mail_thread" modifiers="{}" options="{'display_log_button': True}"/>
              </div>
            </form>
          </field>
      </record>


      <record id="action_intelli_tower" model="ir.actions.act_window">
           <field name="name">Torres</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">intelli.tower</field>
          
           <field name="view_mode">tree,form</field>
           <field name="help" type="html">
               <p class="o_view_nocontent_smiling_face">
                  Create a contact in your address book
               </p>
               <p>
                Odoo helps you to easily track all activities related to a customer.
               </p>
           </field>
       </record>

       <record id="action_tower_tree" model="ir.actions.act_window.view">
         <field eval="1" name="sequence"/>
         <field name="view_mode">tree</field>
         <field name="view_id" ref="tower_view_tree"/>
         <field name="act_window_id" ref="action_intelli_tower"/>
       </record>


      <record id="action_tower_form" model="ir.actions.act_window.view">
          <field eval="2" name="sequence"/>
          <field name="view_mode">form</field>
          <field name="view_id" ref="tower_view_form"/>
          <field name="act_window_id" ref="action_intelli_tower"/>
        </record>


        </data>
    </odoo>
