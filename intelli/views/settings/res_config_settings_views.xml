<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.base.intelli</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="0"/>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='invite_users']" position="before">
                   


                         <div id="Intelli">
                            <h2>Intelli</h2>
                            <div class="row mt16 o_settings_container">
                                
                                <div class="col-6 col-lg-6 o_setting_box">
                                    <div class="o_setting_right_pane">
                                      <span class="o_form_label">
                                           Url video
                                        </span>
                                     <field name='url_video' />
                                     <div class="o_video_container p-2">
                                         
                                        </div>    
                                    </div>
                                </div>

                                 <div class="col-6 col-lg-6 o_setting_box">
                                    <div class="o_setting_right_pane">
                                         <span class="o_form_label">
                                           Manual
                                        </span>
                                        <div></div>
                                     <field name='pdf_m'  context="{'form_view_ref': 'intelli.Pdf_view_form'}"/>

                                    </div>
                                </div>
                                
                               <script  src="intelli/static/js/video.js"></script>
                            </div>
                            <div class="row mt16 o_settings_container">
                                
                                <div class="col-12 col-lg-12 ">
                                    <div class="o_setting_right_pane">
                                      <span class="o_form_label">
                                           Terminos y condiciones
                                        </span>
                                    
                                     <field name="description" widget="html" style="width:700px;"/>   
                                    </div>
                                </div>

                               
                            </div>

                     

                        </div>
                    
                      
                   
                </xpath>
            </field>
        </record>


</odoo>
