<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <template id="report_saledetails_2">
      <t t-call="web.html_container">
        <t t-call="web.internal_layout">
          <div class="page">

            <div class="container">
              <div class="row" style="margin-bottom:10px;">
                <div class="col-12">
                  <h2>Productos</h2>
                </div>
              </div>
              <div class="row">


                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th scope="col"></th>
                      <th scope="col" colspan="10">Product</th>
                      <th scope="col">Cantidad</th>
                      <th scope="col">Impuestos</th>
                      <th scope="col">Unidad de precio</th>
                    </tr>
                  </thead>
                  <tbody>

                    <tr t-foreach='products' t-as='product'>
                      <th scope="row"></th>
                      <td colspan="10">
                        <t t-esc="product['product']"/>
                      </td>
                      <td>
                        <t t-esc="product['quantity']"/>
                      </td>
                      <td>
                        <t t-esc="product['price_tax']"/>
                      </td>
                      <td>
                        <t t-esc="product['price_unit']"/>
                      </td>

                    </tr>


                  </tbody>
                </table>






              </div>
              <div class="row" style="margin-bottom:10px;">
                <div class="col-12">
                  <h2>Pagos (Facturado)</h2>
                </div>
              </div>
              <div class="row">


                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th scope="col"></th>
                      <th scope="col">Nombre</th>
                      <th scope="col">Total</th>
                    </tr>
                  </thead>
                  <tbody>

                    <tr>
                      <th scope="row"></th>
                      <td >
                        EFECTIVO
                      </td>
                      <td>
                        <t t-esc='total_cash'/>
                      </td>
                    </tr>

                    <tr>
                      <th scope="row"></th>
                      <td >
                        TDC
                      </td>
                      <td>
                        <t t-esc='total_bank'/>
                      </td>
                    </tr>

                  </tbody>
                </table>

              </div>
              <div class="row" style="margin-bottom:10px;">
                <div class="col-12">
                  <h2>Impuestos</h2>
                </div>
              </div>
              <div class="row">


                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th scope="col"></th>
                      <th scope="col">Nombre</th>
                      <th scope="col">Importe impuesto</th>
                      <th scope="col">Importe base</th>
                    </tr>
                  </thead>
                  <tbody>

                    <tr>
                      <th scope="row"></th>
                      <td >
                        IVA(VENTAS)
                      </td>
                      <td>
                        <t t-esc='price_tax'/>
                      </td>
                      <td>
                        <t t-esc='total_price'/>
                      </td>
                    </tr>



                  </tbody>
                </table>
              </div>
              <div class="row" style="margin-bottom:10px;">
                <div class="col-12">
                  <h2>Total  <t t-esc='global_total'/> </h2>
                </div>
              </div>
              
            </div>
          </div>

        </t>
      </t>
    </template>
  </data>
</odoo>