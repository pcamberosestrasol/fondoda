<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="prestamo_view_kanban" model="ir.ui.view">
            <field name="name">fondoda.prestamo.kanban</field>
            <field name="model">fondoda.prestamo</field>
            <field name="arch" type="xml">
                <kanban default_group_by="estatus" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="prestamos_activos"/>
                    <field name="cantidad"/>
                    <field name="cantidad_letra"/>
                    <field name="pagos"/>
                    <field name="descuento"/>
                    <field name="monto"/>
                    <field name="interes"/>
                    <field name="estatus"/>
                    <field name="num_colab"/>
                    <field name="fecha"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <h4>Folio:  <field name="name"/></h4>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-12 text-center">
                                            <strong>Colaborador:</strong>
                                            <span><field name="num_colab"/></span>
                                            -
                                            <span><field name="partner_id"/></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 text-center">
                                            <strong>Cantidad:  </strong><span>$<field name="cantidad"/></span>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="fecha"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="estatus"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="prestamo_view_form2" model="ir.ui.view">
            <field name="name">fondoda.prestamo.form2</field>
            <field name="model">fondoda.prestamo</field>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <form>
                    <sheet >
                        <field name="comentario"/>
                    </sheet>
                    <footer>
                        <button name="guardar_cambios" string="Guardar cambios" type="object" class="btn-primary"/>
                        <button name="cancelar_cambios" string="Cancelar" type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="prestamo_view_form" model="ir.ui.view">
            <field name="name">fondoda.prestamo.form</field>
            <field name="model">fondoda.prestamo</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form>
                    <header groups="fondoda.global_permission">
                        <button name="autorizar" string="Aprobar" type="object" class="oe_highlight" attrs="{'invisible':[('estatus', '!=', '1')]}"/>
                        <button name="rechazar" string="Rechazar" type="object" class="oe_highlight" attrs="{'invisible':[('estatus', '!=', '1')]}"/>
                        <button name="pagado" string="Pagar" type="object" class="oe_highlight" attrs="{'invisible':[('estatus', '!=', '2')]}"/>
                    </header>
                    <sheet >
                        <h2><field name="name" readonly="1"/></h2>
                        <group>
                            <group>
                                <field name="fecha" attrs="{'readonly':[('estatus', '=', '3')]}" force_save="1" readonly="1"/>
                                <field name="prestamos_activos" attrs="{'readonly':[('estatus', '=', '3')]}" widget="toggle_button" />
                                <field name="cantidad" attrs="{'readonly':[('estatus', '=', '3')]}"/>
                                <field name="cantidad_letra" attrs="{'readonly':[('estatus', '=', '3')]}"/>
                                <field name="pagos" attrs="{'readonly':[('estatus', '=', '3')]}"/>
                                <button name="open_wizard_terms" type="object" string="Reglamento de Fondo de Ahorro" class="oe_highlight"/>
                                <field name="aceptar"/>
                            </group>
                            <group>
                                <field name="num_colab" attrs="{'readonly':[('estatus', '=', '3')]}" />
                                <field name="descuento" attrs="{'readonly':[('estatus', '=', '3')]}" />
                                <field name="monto" attrs="{'readonly':[('estatus', '=', '3')]}"/>
                                <field name="partner_id" attrs="{'readonly':[('estatus', '=', '3')]}" />
                                <field name="interes" attrs="{'readonly':[('estatus', '=', '3')]}" />
                                <field name="estatus" attrs="{'readonly':[('estatus', '=', '3')]}" />
                                <field name="total_pago"/>
                                
                            </group>
                        </group>
                        <notebook>
                            <page string="Pagos">
                                <group>
                                    <field name="pagos_ids">
                                        <tree editable="bottom">
                                            <field name="prestamo_id"/>
                                            <field name="fecha_pago"/>
                                            <field name="num_pago"/>
                                            <field name="cantidad_pagada"/>
                                        </tree>
                                    <field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="prestamo_view_tree" model="ir.ui.view">
            <field name="name">fondoda.prestamo.tree</field>
            <field name="model">fondoda.prestamo</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="num_colab"/>
                    <field name="partner_id"/>
                    <field name="cantidad"/>
                    <field name="fecha"/>
                    <field name="estatus"/>
                </tree>
            </field>
        </record>


        <record id="prestamos_view_search" model="ir.ui.view">
            <field name="name">fondoda.prestamo.search</field>
            <field name="model">fondoda.prestamo</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Folio"/>
                    <filter string="Pendiente" name="pendiente" domain="[('estatus','=','1')]"/>
                    <filter string="Activo" name="activo" domain="[('estatus','=','2')]"/>
                    <filter string="Pagado" name="pagadp" domain="[('estatus','=','3')]"/>
                    <filter string="Rechazado" name="rechazado" domain="[('estatus','=','4')]"/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="group_estatus" string="Estatus" context="{'group_by':'estatus'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_prestamo_window" model="ir.actions.act_window">
            <field name="name">Solicitud de Prestamo</field>
            <field name="res_model">fondoda.prestamo</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class = "o_view_nocontent_smiling_face">
                    Crea tu nueva solicitud de prestamo
                </p>
            </field>
        </record>
    
        
        <record id="rechazar_prestamo" model="ir.actions.server">
            <field name="name">Rechazar</field>
            <field name="model_id" ref="fondoda.model_fondoda_prestamo"/>
            <field name="binding_model_id" ref="fondoda.model_fondoda_prestamo"/>
            <field name="state">code</field>
            <field name="code">
                action = records.rechazo_comentario()
            </field>
        </record>
        
    </data>
</odoo>